     Registration Form
  <%= form_for @user, :url => {:action => "new"}  do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %> <br>
    <%= f.label :password %>
    <%= f.password_field :password %> <br>
    <%= f.submit "Save" %>

  <% end %>

